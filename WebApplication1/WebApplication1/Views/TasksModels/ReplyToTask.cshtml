@model DeadLiner.Models.ReplyToTask

@{
    ViewBag.Title = "Answer To Task";
    Layout = null;
}

@using (Html.BeginForm("ReplyToTask", "TasksModels", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ReplyToTaskId)
    @Html.HiddenFor(model => model.TaskToUserID)           
    
    <section class="manager">
        <div class="header  ">
            <h3>Answer to task</h3>
        </div>
        <div class="container-fluid eight">
            <div class="row">
                <div class="col-md-12">
                    <div class="content">                        
                        <div class="row user">                            
                            <div class="col-md-12 form">
                                <p>Enter GitHub Link Here:</p>
                                @Html.EditorFor(model => model.UserAnswer, new { htmlAttributes = new { @class = "form-control", required = "Answer field is required." } })
                                @Html.ValidationMessageFor(model => model.UserAnswer, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 four">
                    <div class="col-md-12 btn" style="padding-right: 0 !important">
                        <input type="submit" value="Send" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </section>    
}
