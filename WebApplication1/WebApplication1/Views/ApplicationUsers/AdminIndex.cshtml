@model IEnumerable<DeadLiner.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<table class="table table-bordered ui celled" id="myTable">
    <thead>
        <tr>
            <th>
                No.s
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                Gender
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Phone Number
            </th>
            <th>
                User Name
            </th>
            <th>
                User Status
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td></td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserStatus)
                </td>
                <td class="aFont">
                    <a href="@Url.Action("Edit", new {id = item.Id})">
                        <i class="fa fa-pencil-square-o bat" aria-hidden="true"></i>
                    </a>
                    <a href="@Url.Action("Details", new {id = item.Id})" class="IconHref">
                        <i class="fa fa-info bat" aria-hidden="true"></i>
                    </a>
                    <a href="@Url.Action("Delete", new {id = item.Id})">
                        <i class="fa fa-times bat" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts
{
    <script>
        $(document).ready(function () {
            var oTable = $("#myTable").DataTable({
                responsive: true,
                columnDefs: [
                    { "className": "dt-center", "targets": [8] },
                    { "orderable": false, "targets": 0 }
                ],
                order: [[1, "asc"]]
            });
            oTable.on('order.dt search.dt', function () {
                oTable.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1 + ".";
                });
            }).draw();
        });
    </script>
}
