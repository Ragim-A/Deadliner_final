@model DeadLiner.Models.UserProfileDetailsView

@{
    ViewBag.Title = "Details";
}

<div class="">
    <div class="row">
        <div class="col-md-5  toppad  pull-right col-md-offset-3 ">
        </div>
        <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10 col-xs-offset-0 col-sm-offset-0 col-md-offset-1 col-lg-offset-1 toppad">

            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">@Html.DisplayFor(model => model.User.Name) @Html.DisplayFor(model => model.User.Surname)</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3 col-lg-3 " align="center" style="display: flex;">
                            <div style="width: 210px;">
                                @if (Model.UploadImg.Count == 0)
                                {
                                    <img src="~/Content/images/profile/boy.png" class="img-responsive" style="width: 100%; object-fit: cover;height: 220px" />
                                }
                                else
                                {
                                    foreach (var file in Model.UploadImg)
                                    {
                                        <img src="@Url.Action("Media", "Home", new {id = file.Id})" style="width: 100%; object-fit: cover;height: 220px" class="img-responsive" />
                                    }
                                }
                            </div>
                        </div>
                        <div class=" col-md-9 col-lg-9 ">
                            <table class="table table-user-information">
                                <tbody>
                                    <tr>
                                        <td>@Html.DisplayNameFor(model => model.User.Name):</td>
                                        <td>@Html.DisplayFor(model => model.User.Name)</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.DisplayNameFor(model => model.User.Surname):</td>
                                        <td> @Html.DisplayFor(model => model.User.Surname)</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.DisplayNameFor(model => model.User.Gender):</td>
                                        <td> @Html.DisplayFor(model => model.User.Gender)</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.DisplayNameFor(model => model.User.Email):</td>
                                        <td>@Html.DisplayFor(model => model.User.Email)</td>
                                    </tr>                                    
                                    <tr>
                                        <td>User Name:</td>
                                        <td>@Html.DisplayFor(model => model.User.UserName)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <a href="@Url.Action("Index")" data-original-title="Broadcast Message" data-toggle="tooltip" type="button" class="btn btn-sm btn-primary"><i class="fa fa-chevron-left" aria-hidden="true"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
